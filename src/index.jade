//- Savar el mixin de la estructura de HTML sirve para no provocar ciclos infinitos.
mixin about (imagen, nombreImagen, titulo, texto)
	.col.s4.center
		img(src="assets/images/home/#{imagen}" alt="#{nombreImagen}")
		h5 #{titulo}
		p #{texto}

mixin meet (imagen, nombreImagen, subtitulo, texto)
	.col.s3.center
		img.responsive-img(src="assets/images/aboutus/#{imagen}" alt="#{nombreImagen}")
		h5 #{subtitulo}
		p #{texto}

